<Window x:Class="YoloBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoloBox"
        mc:Ignorable="d"
        Title="YoloBox Labeler"
        Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow"
        Background="#202020"
        >

    <Window.Resources>
        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#10ffffff" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#30ffffff" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image Height="100" Source="/Resources/YoloBoxIconDarkTheme.png" Margin="5 10" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <Grid Grid.Row="1" Margin="6 0 6 6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" x:Name="DataCleaningButton" Style="{StaticResource TransparentButtonStyle}" Margin="0 0 3 0" Command="{Binding OpenDataCleaningCommand}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Resources/dataCleaning.png" Height="200" />
                    <TextBlock Text="Data Cleaning" HorizontalAlignment="Center" />
                </StackPanel>
            </Button>

            <Button Grid.Row="1" Grid.Column="1" x:Name="ImageLabelingButton" Style="{StaticResource TransparentButtonStyle}" Margin="3 0 0 0" Command="{Binding OpenImageLabelingCommand}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Image Source="/Resources/imageLabeling.png" Height="200" />
                    <TextBlock Text="Image Labeling" HorizontalAlignment="Center" />
                </StackPanel>
            </Button>

        </Grid>
        

    </Grid>
</Window>
