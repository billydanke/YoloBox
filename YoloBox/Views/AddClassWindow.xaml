<Window x:Class="YoloBox.Views.AddClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoloBox.Views"
        xmlns:converters="clr-namespace:YoloBox.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Background="#303030"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Height="335" Width="300">

    <Window.Resources>
        <converters:KeyToStringConverter x:Key="KeyToStringConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10">
            <TextBlock Text="Class Name" Foreground="White" />
            <TextBox Text="{Binding ClassName, Mode=TwoWay}" Height="24" Background="#404040" BorderBrush="#808080" VerticalContentAlignment="Center" Foreground="White" Padding="5 0" />
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="10">
            <TextBlock Text="Key Binding" Foreground="White" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding AllowedKeys}" SelectedItem="{Binding HotKey}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource KeyToStringConverter}}">
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Grid.Column="1" Content="_Unset" IsEnabled="{Binding HasHotkey}" Height="24" Margin="5 0 0 0" Command="{Binding ResetHotKeyCommand}" />

            </Grid>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="R" Foreground="Red" FontWeight="SemiBold" HorizontalAlignment="Center" />
            <Slider Grid.Row="1" Orientation="Vertical" Minimum="0" Maximum="255" Value="{Binding R, Mode=TwoWay}" HorizontalAlignment="Center" Margin="5 0" />

            <TextBlock Grid.Column="1" Text="G" Foreground="LimeGreen" FontWeight="SemiBold" HorizontalAlignment="Center" />
            <Slider Grid.Row="1" Grid.Column="1" Orientation="Vertical" Minimum="0" Maximum="255" Value="{Binding G, Mode=TwoWay}" HorizontalAlignment="Center" Margin="5 0" />

            <TextBlock Grid.Column="2" Text="B" Foreground="Blue" FontWeight="SemiBold" HorizontalAlignment="Center" />
            <Slider Grid.Row="1" Grid.Column="2" Orientation="Vertical" Minimum="0" Maximum="255" Value="{Binding B, Mode=TwoWay}" HorizontalAlignment="Center" Margin="5 0" />

        </Grid>

        <Border Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Background="{Binding Brush}" />

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5 3">
            <Button Content="_Cancel" Width="70" Margin="0 0 3 0" Command="{Binding CancelCommand}" />
            <Button Content="_Save" Width="70" Margin="3 0 0 0" Command="{Binding SaveClassesCommand}" />
        </StackPanel>
        
    </Grid>
</Window>
