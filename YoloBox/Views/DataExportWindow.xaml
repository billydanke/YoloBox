<Window x:Class="YoloBox.Views.DataExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoloBox.Views"
        xmlns:converters="clr-namespace:YoloBox.Converters"
        xmlns:validations="clr-namespace:YoloBox.ValidationRules"
        mc:Ignorable="d"
        Title="Export Cleaned Data"
        ResizeMode="NoResize"
        Background="#303030"
        Height="300" Width="600">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="3" Orientation="Vertical" Margin="5">

            <TextBlock Text="Export Path" Foreground="White" Margin="5" />
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding ExportFolderPath, Mode=TwoWay}" Background="#404040" BorderBrush="#808080" VerticalContentAlignment="Center" Foreground="White" Padding="5 0" />
                <Button Grid.Column="1" Padding="4" Command="{Binding ChangeExportPathCommand}">
                    <Image Source="/Resources/openFolder.png" Width="24" />
                </Button>
            </Grid>

            <CheckBox Content="Generate YOLO Dataset Folder Structure" Foreground="White" IsChecked="{Binding DoGenerateFolderStructure}" Margin="0 3" ToolTip="Generates the standard YOLO images and labels subfolders within the parent export directory. If disabled, images will be directly exported to the set directory." />

            <CheckBox Content="Start With Non-Zero Index" Foreground="White" IsChecked="{Binding IsNonZeroStartingIndex}" Margin="0 3" ToolTip="If appending to an existing dataset, you will likely want to output images starting at the last existing image, plus one." />
            <TextBlock Text="Starting Image Index" Foreground="White" Margin="5" />
            <TextBox Text="{Binding StartingImageIndex, Mode=TwoWay}" IsEnabled="{Binding IsNonZeroStartingIndex}" Width="50" Height="30" HorizontalAlignment="Left" Background="#404040" BorderBrush="#808080" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Padding="5 0" PreviewTextInput="TextBox_PreviewTextInput" />

        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" IsEnabled="{Binding IsExporting}" VerticalAlignment="Center" Margin="5 0">
            <TextBlock Text="{Binding ExportedImagesCount}" Foreground="White" />
            <TextBlock Text="/" Foreground="White" />
            <TextBlock Text="{Binding TotalImages}" Foreground="White" />
        </StackPanel>
        <ProgressBar Grid.Row="1" Grid.Column="1" Height="20" IsEnabled="{Binding IsExporting}" Margin="5 0 0 0" VerticalAlignment="Center" Value="{Binding ExportedImagesCount}" Maximum="{Binding TotalImages}" />

        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="5 3" >
            <Button Content="_Cancel" Width="70" Margin="0 0 3 0" Command="{Binding CancelCommand}" />
            <Button Content="_Export" Width="80" Margin="3 0 0 0" Command="{Binding ExportCommand}" />
        </StackPanel>

    </Grid>
</Window>